package ej3;

public class Coordinador extends Profesor {
    private String responsabilidad;

    public Coordinador(String nombre, String dni, String departamento, String responsabilidad) {
        super(nombre, dni, departamento);
        this.responsabilidad = responsabilidad;
    }

    public String getResponsabilidad() {
        return responsabilidad;
    }

    public String asignarTarea(String tarea, String destinatario) {
        return "Tarea '" + tarea + "' asignada a " + destinatario + ".";
    }

    @Override
    public String presentarse() {
        return "Saludos, soy el coordinador " + nombre + " con DNI " + dni + ", responsable de " + responsabilidad + " en el departamento de " + getDepartamento() + ".";
    }
}